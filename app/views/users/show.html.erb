<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h3>
        <%= link_to @usersmbti.typecode, userpersonality_path(:id => @user.id) %>
      </h3>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Woof (<%= @user.microposts.count %>)</h3>
      <ol class="microposts" %>
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div> 